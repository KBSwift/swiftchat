@page "/confirm-email" 
@model ConfirmEmailModel
@{
	ViewData["Title"] = "Email Confirmed!";
}
<div id="alertPlaceholder"></div>
<h1>Welcome to SwiftChat!</h1>
<p>Your email has been confirmed successfully. You will be redirected to the login page shortly.</p>
<a href="/login">Click here to be manually redirected</a>

@section Scripts {
	<script>
		if (@ViewBag.UserMessage != null) {
			showSuccess('Your account is now confirmed!');
		}

		if (TempData["UserMessage"] = "success") {
			setTimeout(function () {
				window.location.href = '/login';
			}, 5000); // 5 secs
		}
	</script>
}